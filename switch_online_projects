#!/usr/bin/env bash

set -e

if [ -d "spec/dummy" ]; then
    echo ">>> Building rbenv gemset"
    build_rbenv_gemset $(basename $(pwd))
else
    echo ">>> Bundling gems"
    bundle
fi

echo ">>> Pulling Git projects"
(
    cd ..
    git_pull_list
)

nuke_schemas

echo ">>> Running tests"
bundle exec rake
