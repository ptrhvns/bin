#!/usr/bin/env python

import os.path
import sys

sys.path.append(os.path.join(os.environ['HOME'], 'lib'))

from pylocal import directories, git

if __name__ == '__main__':
    dirs = [directories.source(d) for d in directories.source_backup_subdirs()]
    if git.check_dirty(dirs):
        sys.exit(1)
