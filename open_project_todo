#!/usr/bin/env bash

# Open a project's todo file for editing.
if [[ -e $PWD/todo ]]; then
    TODO=$PWD/todo
elif [[ "$PWD" = "$HOME/src/personal/project" ]]; then
    TODO=$HOME/doc/project/todo
else
    TODO=$HOME/doc/work/todos/${PWD##*/}
fi

$EDITOR -O $TODO $HOME/doc/computer/programming/red_green_refactor
